@{
    ViewData["Title"] = "FindDetail";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="FindDetail">
            <div class="form-group">
                <label for="StudentID" class="control-label"></label>
                <input type="text" id="StudentID" name="StudentID" class="form-control" placeholder="Format must be Nxxxxxxxx" pattern="N\d{8}" title="Format must be Nxxxxxxxx" />
            </div>
            <div class="form-group">
                <input type="submit" value="Find Student" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Student List</a>
</div>